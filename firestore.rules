rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Test documents - allow all operations for development/testing
    match /test/{document=**} {
      allow read, write: if true;
    }
    
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read other users' public profiles
    match /users/{userId} {
      allow read: if request.auth != null;
    }
    
    // Quotes can be read by anyone, written by authenticated users
    match /quotes/{quoteId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // User quotes - users can read/write their own quotes
    match /users/{userId}/quotes/{quoteId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Community posts - readable by all, writable by authenticated users
    match /community/{postId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Analytics data - only readable/writable by the user
    match /analytics/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow all other reads and writes for development
    // TODO: Restrict this in production
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
